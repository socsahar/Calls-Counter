{
  "name": "mda-call-counter",
  "version": "1.0.0",
  "description": "Hebrew MDA motorcycle call tracking application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev-local": "set NODE_ENV=development&& nodemon server.js",
    "start-local": "set NODE_ENV=development&& node server.js",
    "build": "echo 'Build process placeholder'",
